rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow anyone to create a user document, but ONLY if the
      // document's ID matches the 'uid' field in the document data.
      // This is a secure way to allow profile creation during signup
      // before the auth state has fully propagated.
      allow create: if request.resource.data.uid == userId;

      // Allow authenticated users to read their own user document.
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to update their own user document.
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    match /quizzes/{quizId} {
      // Any authenticated user can read quizzes.
      allow read: if request.auth != null;

      // Only teachers (as defined by their user doc) can create quizzes.
      // The person creating the quiz must match the createdBy field.
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' && request.resource.data.createdBy == request.auth.uid;
      
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' && resource.data.createdBy == request.auth.uid;
    }

    match /submissions/{submissionId} {
        // A user can create a submission if they are the one submitting it,
        // and the teacherId in the submission matches the creator of the quiz.
        allow create: if request.auth != null && 
                        request.resource.data.studentId == request.auth.uid &&
                        request.resource.data.teacherId == get(/databases/$(database)/documents/quizzes/$(request.resource.data.quizId)).data.createdBy;

        // A user can read their own submissions.
        allow read: if request.auth != null && resource.data.studentId == request.auth.uid;
        
        // Teachers can read submissions for quizzes they created.
        allow list: if request.auth != null && 
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher' &&
                       request.query.teacherId == request.auth.uid;
    }
  }
}
